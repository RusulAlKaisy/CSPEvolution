#Let's create some heatmaps for the locations. First we will change the working directory

setwd("C:/Users/HomePC/Desktop/Dataset1/GHOST_200_locations")

#Let us create heatmaps for the H2 class model with outgroup 

#First dataset 

#H2_class model 

H2_classmodelFirstDataset_withoutgroup<-read.table("FirstDataSet_LocationswithOutgroupH2GHOST.fasta.siteprob",header=TRUE,row.names=1)

#Create a matrix
H2_classmodelFirstDataSet_withoutgroup_matrix<-as.matrix(H2_classmodelFirstDataset_withoutgroup)

H2_classmodelFirstDataSet_withoutgroup_plot<-heatmap(H2_classmodelFirstDataSet_withoutgroup_matrix,Rowv=NA,Colv=NA,scale="none",xlab="Categories - FirstDataSet_outgroup - Figure 1A",ylab="sites",main="Heatmap_H2_locations_withoutgroup")

#H3 class model 

H3_classmodelFirstDataSet_withoutgroup<-read.table("FirstDataSet_LocationswithOutgroupH3GHOST.fasta.siteprob",header=TRUE,row.names=1)

#Create a matrix
H3_classmodelFirstDataSet_withoutgroup_matrix<-as.matrix(H3_classmodelFirstDataSet_withoutgroup)

H3_classmodelFirstDataSet_withoutgroup_plot<-heatmap(H3_classmodelFirstDataSet_withoutgroup_matrix,Rowv=NA,Colv=NA,scale="none",xlab="Categories - FirstDataSet_outgroup - Figure 4A",ylab="sites",main="Heatmap_H3_locations_withoutgroup")

