#Let's create some heatmaps for the locations. First we will change the working directory

setwd("C:/Users/HomePC/Desktop/Dataset1/GHOST_200_locations")

#Let us create heatmaps for the H2 category model with outgroup 

#First dataset 

#H2_category model 

H2_categorymodelFirstDataset_withoutgroup<-read.table("FirstDataSet_LocationswithOutgroupH2GHOST.fasta.siteprob",header=TRUE,row.names=1)

#Create a matrix
H2_categorymodelFirstDataSet_withoutgroup_matrix<-as.matrix(H2_categorymodelFirstDataset_withoutgroup)

H2_categorymodelFirstDataSet_withoutgroup_plot<-heatmap(H2_categorymodelFirstDataSet_withoutgroup_matrix,Rowv=NA,Colv=NA,scale="none",xlab="Categories - FirstDataSet_outgroup - Figure 1A",ylab="sites",main="Heatmap_H2_locations_withoutgroup")

#H3 category model 

H3_categorymodelFirstDataSet_withoutgroup<-read.table("FirstDataSet_LocationswithOutgroupH3GHOST.fasta.siteprob",header=TRUE,row.names=1)

#Create a matrix
H3_categorymodelFirstDataSet_withoutgroup_matrix<-as.matrix(H3_categorymodelFirstDataSet_withoutgroup)

H3_categorymodelFirstDataSet_withoutgroup_plot<-heatmap(H3_categorymodelFirstDataSet_withoutgroup_matrix,Rowv=NA,Colv=NA,scale="none",xlab="Categories - FirstDataSet_outgroup - Figure 4A",ylab="sites",main="Heatmap_H3_locations_withoutgroup")

