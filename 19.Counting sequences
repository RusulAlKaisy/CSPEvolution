##Let's write code that will count how many sequences from each country we have 
fasta_lines<-read.FASTA("C:\\Users\\HomePC\\Desktop\\Dataset1\\Sequences_with_Locations.fasta")

labels<-names(fasta_lines)

label_counts<-table(labels)

#Vanuatu
Country_counts_Vanuatu<-sum(grepl("Vanuatu",labels,ignore.case=TRUE))

#Papua New Guinea
Country_counts_Papua_New<-sum(grepl("Papua_New_Guinea",labels,ignore.case=TRUE))

